{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "typeRoots" : [
            "../src",
            "../typings/global",
            "../typings/modules",
            "../bower_components"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "allowJs": false,
        "rootDir": "."
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "**/node_modules"
    ]
}
