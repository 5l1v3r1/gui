{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "typeRoots": [
            "./typings/modules",
            "./typings/globals"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "allowJs": true,
        "outDir": "core"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/node_modules"
    ]
}
